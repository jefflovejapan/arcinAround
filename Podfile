# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

def pods()
  pod 'RxSwift', '4.0.0-beta.1'
  pod 'RxCocoa', '4.0.0-beta.1'
end

target 'instanceMethods' do
  use_frameworks!
  pods()
end

target 'simpleClosures' do
  use_frameworks!
  pods()
end

target 'scopes' do
  use_frameworks!
  pods()
end

target 'timers' do
    use_frameworks!
    pods()
end
